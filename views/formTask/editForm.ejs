        <script src="../../../assets/dist/js/bootstrap.bundle.min.js"></script>

        <script src="../../../assets/js/sidebars.js"></script>


        <script>
            document.addEventListener("DOMContentLoaded", async function () {
            const form = document.querySelector('form');
            form.addEventListener('submit', async (event) => {
                event.preventDefault();

                const tittle = document.getElementById('floatingInputTittle').value;
                const description = document.getElementById('floatingInputDesc').value;
                
                const formData = new FormData();
                formData.append('tittle', tittle);
                formData.append('description', description);

                const form_id = '<%= form_id %>';
                const response = await fetch('http://localhost:3000/form/editform/'+ form_id, {
                        method: 'POST',
                        body: formData
                    });

                const data = await response.json();

                if (data.success) {
                    alert(data.msg);
                    window.location.href = '/form/listMyForm';
                } else if (!data.success) {
                    alert(data.msg);
                    window.location.href = '/form/listMyForm';
                } 
            });
            })
        </script>
