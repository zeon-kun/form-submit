        <script>
            const addForm = document.getElementById('addForm');
            addForm.addEventListener('submit', async (event) => {
              event.preventDefault(); // Menghentikan pengiriman form secara default
        
              // Mengambil nilai input form
              const tittle = document.getElementById('floatingInputTittle').value;
              const description = document.getElementById('floatingInputDescription').value;
            
              const formData = new FormData(addForm);
              // Objek data yang akan dikirimkan
              const thisData = {
                tittle: tittle ,
                description: description,
              };
        
              // Konfigurasi request Fetch API
              const requestOptions = await fetch('http://localhost:5000/form/addForm', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                }, body: JSON.stringify(thisData)
              });
        
              const data = await requestOptions.json();
              if (data.status == 'success') {
                alert(data.msg);
                window.location.href = '/form/home';
              } else if (data.msg == "Please try again later") {
                alert(data.msg);
              } 
        
            });
